{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "name": "Syncboii",
  "description": "Sync videos on any site",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png",
    "256": "icons/logo256.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "contentSettings",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
